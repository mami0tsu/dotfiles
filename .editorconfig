root = true

[*]
indent_style = space
indent_size  = 2
end_of_line  = lf
charset      = utf-8
trim_trailing_whitespace = true
insert_final_newline     = true
max_line_length          = 80

[*.go]
indent_style = tab
indent_size  = tab
tab_width    = 8

[*.tf]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.{js,ts}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2
