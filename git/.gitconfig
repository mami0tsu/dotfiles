[user]
	email = mami0tsu.jp@gmail.com
	name = mami0tsu
[init]
	defaultBranch = main
[core]
	editor = nvim
    pager = delta
[alias]
    a = add
    b = branch
    c = commit -m
    f = fetch
    l = log --oneline
    r = restore
    s = status --short --branch
    sw = switch
    swc = switch --create
# delta
[interactive]
    diffFilter = delta --color-only
[delta]
    line-numbers = true
    navigate = true
    side-by-side = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
[push]
	autoSetupRemote = true
